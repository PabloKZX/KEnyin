#type vertex
#version 330 core
layout (location = 0) in vec3 aPos;

out vec3 v_Position;

void main()
{
    v_Position = aPos;
    gl_Position = vec4(aPos, 1.0);
}

#type fragment
#version 330 core
out vec4 fragColor;

in vec3 v_Position;

void main()
{
    fragColor = vec4(v_Position * 0.5 + 0.5, 1.0);
}

